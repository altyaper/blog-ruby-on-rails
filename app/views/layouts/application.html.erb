<!DOCTYPE html>
<html>
  <head>
    <title>News</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
 
    <nav class="navbat-top navbar navbar-light justify-content-between p-h" style="background-color: #fff;">
      <a class="navbar-brand" href="/">News</a>
      
    
      <div>
        <% if user_signed_in? %>
          <%= current_user.email %>
          <%= link_to 'Articles', articles_path, :class => 'btn btn-primary navbar-link' %>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-primary navbar-link' %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn navbar-link'  %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-primary'  %>
          <%= link_to "Login", new_user_session_path, :class => 'btn btn-secondary'  %>
        <% end %>
      </div>
    </nav>

    <div class="p-2 mt">
      <%= yield %>
    </div>
  </body>
</html>
